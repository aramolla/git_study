<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>org.zerock.smcal.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>org.zerock.smcal.SignUpController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>org.zerock.smcal.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginErrorController</servlet-name>
        <servlet-class>org.zerock.smcal.LoginErrorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginErrorController</servlet-name>
        <url-pattern>/loginError</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpErrorController</servlet-name>
        <servlet-class>org.zerock.smcal.SignUpErrorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpErrorController</servlet-name>
        <url-pattern>/signupError</url-pattern>
    </servlet-mapping>

</web-app>
